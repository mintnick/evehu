{
    "apps": [
        {
            "name": "evehu_www",
            "script": "./bin/www.js",
            "watch":  true,
            "ignore_watch" : ["node_modules", "max_ids", "resource"],
            "watch_options": {
                "usePolling": true,
                "interval": 1000
            },
            "log_date_format": "YYYY-MM-DD HH:mm Z",
            "env": {
                "NODE_ENV" : "production"
            }
        },
        {
            "name": "evehu_update",
            "script": "./bin/update.js",
            "watch":  true,
            "ignore_watch" : ["node_modules", "max_ids", "resource"],
            "watch_options": {
                "usePolling": true,
                "interval": 1000
            },
            "log_date_format": "YYYY-MM-DD HH:mm Z",
            "env": {
                "NODE_ENV" : "production"
            }
        }
    ]
}
